<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:background="@color/window_gray"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/tv_profession"
            android:text="职业: "
            android:textColor="@color/text_gray01"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_birth"
            android:text="生日: "
            android:layout_marginTop="4dp"
            android:textColor="@color/text_gray01"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_height"
            android:text="身高: "
            android:layout_marginTop="4dp"
            android:textColor="@color/text_gray01"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_address"
            android:text="出生地: "
            android:layout_marginTop="4dp"
            android:textColor="@color/text_gray01"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_movieCount"
            android:text="参与作品: "
            android:layout_marginTop="4dp"
            android:textColor="@color/text_gray01"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <View
        android:background="@color/window_gray"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:text="简介"
            android:textColor="@color/text_gray02"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <jaydenxiao.com.expandabletextview.ExpandableTextView
            android:id="@+id/tv_actors_info"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:collapseDrawable="@drawable/icon_green_arrow_down"
            app:collapseExpandGrarity="right"
            app:collapseExpandTextColor="@color/main_color"
            app:contentTextColor="@color/text_gray01"
            app:contentTextSize="15sp"
            app:expandDrawable="@drawable/icon_green_arrow_up"
            app:maxCollapsedLines="4"
            app:textCollapse="@string/collapse"
            app:textExpand="@string/expand" />

    </LinearLayout>


    <View
        android:background="@color/window_gray"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:text="相册"
            android:textColor="@color/text_gray02"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        </android.support.v7.widget.RecyclerView>


    </LinearLayout>


    <View
        android:background="@color/window_gray"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:text="相关人物"
            android:textColor="@color/text_gray02"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <View
        android:background="@color/window_gray"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:text="获奖"
            android:textColor="@color/text_gray02"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>